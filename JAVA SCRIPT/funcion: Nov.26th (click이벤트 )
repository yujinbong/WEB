const title=document.querySelector("#title");

const BASE_COLOR ="rgb(52, 73, 94)";
const OTHER_COLOR ="#27ae60";

function handleClick() {
const currentColor=title.style.color;
if (currentColor===BASE_COLOR){ //사용자가 글씨를 클릭했을때 current와 base의 색이 동일하면 위에 지정해둔 other_color로 색이 변경된다.
  title.style.color=OTHER_COLOR;
}else{ // 사용자가 클릭을 누르고 색이 바뀌면 current와 base의 색이 달라짐으로 다시 other->base로 색이 변경된다.
  title.style.color=BASE_COLOR;
}
}

function init() {
title.style.color=BASE_COLOR;
title.addEventListener("click",handleClick); //클릭 이벤트
}
init();
