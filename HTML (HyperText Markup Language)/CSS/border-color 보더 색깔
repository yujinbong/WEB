   <style type="text/css">
   
	.example-01{
		border-color:#ff0000; border-style:solid;
	}

	.example-02{
		border-style:solid;
		border-top-color:#ff0000;
		border-right-color:#336699;
		border-bottom-color:#00ff00;
		border-left-color:#00ffff;
	}

	.example-03{
		border-style:groove; border-width:10px;
		border-top-color:#ff0000;
		border-right-color:#336699;
		border-bottom-color:#00ff00;
		border-left-color:#00ffff;
	}

	.example-04{
		border-style:ridge; border-width:10px;
		border-top-color:#ff0000;
		border-right-color:#336699;
		border-bottom-color:#00ff00;
		border-left-color:#00ffff;
	}

	.example-05{
		border-style:inset; border-width:10px;
		border-top-color:#ff0000;
		border-right-color:#336699;
		border-bottom-color:#00ff00;
		border-left-color:#00ffff;
	}

	.example-06{
		border-style:outset; border-width:10px;
		border-top-color:#ff0000;
		border-right-color:#336699;
		border-bottom-color:#00ff00;
		border-left-color:#00ffff;
	}

	.example-07{
		border-style: solid; border-width: 5px;
		border-color: transparent;
	}

   </style>
